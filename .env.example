# Copy this file to .env and fill the values for real email sending.
# For demo/testing you can leave SMTP_* empty and the app will print OTPs to console.

SECRET_KEY=replace-with-secure-secret
DATABASE_URI=sqlite:///db.sqlite3

# SMTP settings (for sending via SMTP)
SMTP_SERVER=smtp.example.com
SMTP_PORT=465
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SENDER_EMAIL=your@domain.com

# FLASK_DEBUG=1
# PORT=5000
